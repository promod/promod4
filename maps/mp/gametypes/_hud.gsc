    precacheShader( "score_bar_allies" );
    precacheShader( "score_bar_opfor" );

    level.uiParent = spawnstruct();
    level.uiParent.horzAlign = "left";
    level.uiParent.vertAlign = "top";
    level.uiParent.alignX = "left";
    level.uiParent.alignY = "top";
